{
  "manifest_version": 3,
  "name": "CrowdTruth",
  "version": "0.1.0",
  "description": "Combating misinformation with crowdsourced fact checks.",
  "action": {
    "default_popup": "src/popup/popup.html",
    "default_title": "CrowdTruth"
  },
  "background": {
    "scripts": [
      "src/background.js"
    ],
    "type": "module"
  },
  "permissions": [
    "storage",
    "activeTab",
    "tabs"
  ],
  "host_permissions": [
    "http://localhost:8080/*"
  ],
  "commands": {
    "_execute_action": {
      "suggested_key": {
        "default": "Ctrl+Shift+R",
        "mac": "Command+Shift+R"
      },
      "description": "Open CrowdTruth popup"
    }
  },
  "content_scripts": [
    {
      "matches": [
        "<all_urls>"
      ],
      "js": [
        "src/content/content_loader.js"
      ]
    }
  ],
  "web_accessible_resources": [
    {
      "matches": [
        "<all_urls>"
      ],
      "resources": [
        "src/*"
      ]
    }
  ]
}