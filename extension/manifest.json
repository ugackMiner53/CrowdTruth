{
  "manifest_version": 3,
  "name": "CrowdTruth",
  "version": "0.1.0-dev",
  "description": "Combating misinformation with crowdsourced fact checks.",
  "action": {
    "default_popup": "src/popup/popup.html",
    "default_title": "CrowdTruth"
  },
  "background": {
    "scripts":[
      "src/background.js"
    ]
  },
  "permissions": ["storage", "activeTab"],
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["src/content.js"]
    }
  ]
}
